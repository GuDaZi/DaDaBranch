<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/myassess_work_shape"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@mipmap/work_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="7dp">

        <CheckBox
            android:id="@+id/cb_work_tasks"
            style="@style/myAssessWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/work_tasks"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sixteen" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textColor="@color/text_gray"
        android:layout_marginLeft="40dp"
        android:gravity="center_vertical"
        android:textSize="@dimen/sixteen" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@mipmap/work_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="7dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/routine_tasks"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sixteen" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/dynamic_tasks"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sixteen" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/totals"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sixteen" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/number"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sixteen" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="7dp">

        <TextView
            android:id="@+id/tv_normalcy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sixteen" />

        <TextView
            android:id="@+id/tv_dynamic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sixteen" />

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sixteen" />

        <EditText
            android:id="@+id/et_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:inputType="number"
            android:background="@drawable/assess_shape"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sixteen" />

    </LinearLayout>

</LinearLayout>