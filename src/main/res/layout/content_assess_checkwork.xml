<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/myassess_work_shape"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@mipmap/work_background"
        android:orientation="horizontal">

        <TextView
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="@string/num"
            android:textColor="@color/black"
            android:textSize="@dimen/sixteen" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="@string/workTask"
            android:textColor="@color/black"
            android:textSize="@dimen/sixteen" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="118dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/isFinish"
            android:textColor="@color/black"
            android:textSize="@dimen/sixteen" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="13dp"
            android:gravity="center"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sixteen" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line_gray"></View>

        <TextView
            android:id="@+id/tv_work"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="13dp"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sixteen" />

        <LinearLayout
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="13dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_isFinish_status"
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/sixteen" />

            <TextView
                android:id="@+id/tv_isFinish"
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/sixteen" />

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line_gray"></View>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@mipmap/work_background"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/performance"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/sixteen" />

                <View
                    android:layout_width="61dp"
                    android:layout_height="1px"
                    android:layout_marginTop="3dp"
                    android:background="@color/line_gray"></View>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="@string/time"
                android:textColor="@color/black"
                android:textSize="@dimen/sixteen" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="@string/time"
                android:textColor="@color/black"
                android:textSize="@dimen/sixteen" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.xianzhi.integration.view.MyAssessListView
            android:id="@+id/list_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="@color/white"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="2dp"
            android:divider="@color/white"
            android:scrollbars="none"></com.xianzhi.integration.view.MyAssessListView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@mipmap/work_background"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="@string/specificJob"
            android:textColor="@color/black"
            android:textSize="@dimen/sixteen" />

        <TextView
            android:id="@+id/tv_workDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="19dp"
            android:paddingRight="16dp"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sixteen" />

    </LinearLayout>

</LinearLayout>