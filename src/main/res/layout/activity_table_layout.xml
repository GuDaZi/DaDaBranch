                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/myassess_work_shape"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@mipmap/work_background"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:text="@string/project"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sixteen" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@mipmap/work_background"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:text="@string/assessContent"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sixteen" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@mipmap/work_background"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:text="@string/assessStandard"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sixteen" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_vetoConditions_title"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:textColor="@color/text_gray2"
                        android:textSize="@dimen/fourteen" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/line_gray"></View>

                    <TextView
                        android:id="@+id/tv_content_condition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:textColor="@color/text_gray2"
                        android:textSize="@dimen/fourteen" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/line_gray"></View>

                    <TextView
                        android:id="@+id/tv_standard_condition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:textColor="@color/text_gray2"
                        android:textSize="@dimen/fourteen" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_gray"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_ownWork_title"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:textColor="@color/text_gray2"
                        android:textSize="@dimen/fourteen" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/line_gray"></View>

                    <TextView
                        android:id="@+id/tv_content_work"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:textColor="@color/text_gray2"
                        android:textSize="@dimen/fourteen" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/line_gray"></View>

                    <TextView
                        android:id="@+id/tv_standard_work"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:textColor="@color/text_gray2"
                        android:textSize="@dimen/fourteen" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_gray"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_fieldControl_title"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:textColor="@color/text_gray2"
                        android:textSize="@dimen/fourteen" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/line_gray"></View>

                    <TextView
                        android:id="@+id/tv_content_controller"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:textColor="@color/text_gray2"
                        android:textSize="@dimen/fourteen" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/line_gray"></View>

                    <TextView
                        android:id="@+id/tv_standard_controller"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:textColor="@color/text_gray2"
                        android:textSize="@dimen/fourteen" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/myassess_work_shape"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@mipmap/work_background"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/minus_add_reason"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sixteen" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
