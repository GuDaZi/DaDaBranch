                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/line_gray"></View>

                    <TextView
                        android:id="@+id/tv_assessType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/assess_shape"
                        android:text="点击选择"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:padding="5dp"
                        android:textColor="@color/text_gray2"
                        android:textSize="@dimen/fourteen" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_gray"></View>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/myassess_work_shape"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@mipmap/work_background"
                    android:padding="10dp"
                    android:text="@string/leader_sign"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sixteen" />

                <EditText
                    android:id="@+id/tv_leader_sign"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/assess_shape"
                    android:gravity="left"
                    android:padding="10dp"
                    android:textColor="@color/text_gray2"
                    android:textSize="@dimen/fourteen" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/approvePersonal"
                        android:textColor="@color/text_gray2"
                        android:textSize="@dimen/fourteen" />

                    <TextView
                        android:id="@+id/tv_leader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/text_gray2"
                        android:textSize="@dimen/fourteen" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/approvePersonal_date"
                        android:textColor="@color/text_gray2"
                        android:textSize="@dimen/fourteen" />

                    <TextView
                        android:id="@+id/tv_leader_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_gray2"
                        android:textSize="@dimen/fourteen" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_save"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:text="@string/save"
                    android:visibility="gone"
                    android:background="@mipmap/blue_button"
                    android:gravity="center"
                    android:textSize="@dimen/fourteen"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>