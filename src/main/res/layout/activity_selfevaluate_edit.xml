<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_edit_evaluate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_layout"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:layout_marginTop="7dp"
                android:orientation="horizontal"
                android:paddingLeft="23dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/template_month"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sixteen" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/assess_shape"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_template_month"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:padding="5dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/sixteen" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="2dp"
                        android:src="@mipmap/inptime" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="23dp"
                android:paddingRight="23dp"
                android:paddingTop="7dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/template_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sixteen" />

                <EditText
                    android:id="@+id/et_template_content"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="7dp"
                    android:padding="5dp"
                    android:background="@drawable/myassess_work_shape"
                    android:gravity="left"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/sixteen" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_evaluate_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/blue_button"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/copy"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sixteen" />

                <TextView
                    android:id="@+id/tv_evaluate_restore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:background="@mipmap/yellow_button"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/restore"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sixteen" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/background"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/realistic_month"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sixteen" />

                <TextView
                    android:id="@+id/tv_realistic_month"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/sixteen" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:orientation="vertical"
                android:paddingTop="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/own_work_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sixteen" />

                <TextView
                    android:id="@+id/tv_work_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/sixteen" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:gravity="left"
                android:orientation="horizontal"
                android:paddingTop="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/own_work_standard"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sixteen" />

                <TextView
                    android:id="@+id/tv_work_standard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/sixteen" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="23dp"
                android:paddingRight="23dp"
                android:paddingTop="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/realistic_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sixteen" />

                <EditText
                    android:id="@+id/et_realistic_content"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="7dp"
                    android:padding="5dp"
                    android:background="@drawable/myassess_work_shape"
                    android:gravity="left"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/sixteen" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal"
                android:paddingLeft="23dp"
                android:paddingRight="23dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/assessment_num"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sixteen" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_evaluate_add"
                        style="@style/depart_risk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="加分"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sixteen" />

                    <RadioButton
                        android:id="@+id/rb_evaluate_minus"
                        style="@style/depart_risk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="减分"
                        android:layout_marginLeft="30dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sixteen" />

                </RadioGroup>

            </LinearLayout>

            <EditText
                android:id="@+id/et_evaluate_num"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sixteen"
                android:textColor="@color/text_gray"
                android:background="@drawable/assess_shape"
                android:hint="请输入分值"
                android:maxLines="1"
                android:inputType="number"
                android:padding="5dp"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="83dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_evaluate_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/blue_button"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/save"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sixteen" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>